{
  "name": "@illuma/core",
  "description": "A lightweight, type-safe dependency injection container for anything, inspired by Angular's DI system",
  "author": "bebrasmell",
  "repository": {
    "type": "git",
    "url": "https://github.com/git-illuma/core"
  },
  "version": "1.5.2",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./testkit": {
      "types": "./dist/testkit.d.ts",
      "import": "./dist/testkit.js",
      "require": "./dist/testkit.cjs"
    },
    "./plugins": {
      "types": "./dist/plugins.d.ts",
      "import": "./dist/plugins.js",
      "require": "./dist/plugins.cjs"
    }
  },
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "di",
    "dependency",
    "injection",
    "container",
    "angular",
    "electron",
    "ioc",
    "inversify",
    "typescript",
    "decorators",
    "service",
    "provider",
    "module",
    "inversion-of-control"
  ],
  "scripts": {
    "test": "vitest run",
    "test:badges": "vitest run --coverage && make-coverage-badge --report-path ./artifacts/coverage/coverage-summary.json --output-path ./badges/coverage.svg",
    "build": "tsup",
    "lint": "biome check",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@swc/core": "1.15.3",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "^4.0.18",
    "make-coverage-badge": "1.2.0",
    "tsup": "8.5.1",
    "typescript": "5.9.2",
    "vitest": "^4.0.18"
  },
  "packageManager": "bun@1.3.6"
}
